<section>
  <h1>Contact us</h1>

  <form action="/contact" method="POST">
    <input type="email" name="contact[email]" value="{{ contact['email'] }}" placeholder="E-mail"><br/>

    <input type="text" name="contact[subject]" value="{{ contact['subject'] }}" placeholder="Subject"><br/>

    <textarea name="contact[body]" placeholder="Type your message here">{{ contact['body'] }}</textarea>

    <button type="submit">Send</button>
  </form>
</section>
