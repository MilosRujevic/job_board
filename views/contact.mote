<h3>Contact us</h3>

<section id="contact">
  <form action="/contact" method="POST">
    <input type="email" name="contact[email]" value="{{ contact['email'] }}" placeholder="Your E-mail"><br/>

    <input type="text" name="contact[subject]" value="{{ contact['subject'] }}" placeholder="Subject"><br/>

    <textarea name="contact[body]" placeholder="Type your message here">{{ contact['body'] }}</textarea><br/>

    <button type="submit">Send</button>
  </form>
</section>
