% if developer.nil?
  <span class="apply cursor">
    <a href="/apply/{{ post.id }}">
      <i class="fa fa-check"></i><span class="underline">Apply</span>
    </a>
  </span>
% elsif developer && developer.applied?(post.id)
  <span class="applied cursor">
    <i class="fa fa-check"></i><span>Applied</span>
  </span>
% else
  <span onclick="apply({{ post.id }})" id="post_{{ post.id }}"
  class="apply cursor">
    <i class="fa fa-check"></i><span class="underline">Apply</span>
  </span>
% end
