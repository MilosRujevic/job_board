<h1 id="tagline">Get a better job today!</h1>

<section id="search_box_home">
  {{ this.partial("search_box") }}
</section>

<h2>Latest posts</h1>

<ul>
% latest_posts.each do |post|
  <li>
    <a href="search?post_id={{ post.id }}">{{ this.h(post.title) }}</a> @
    <a href="search?company_id={{ post.company.id }}">{{ this.h(post.company.name) }}</a>
  </li>
% end
</ul>

<a href="/search?all=true">All posts</a>
